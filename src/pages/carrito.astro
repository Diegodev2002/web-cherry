---
import Layout from "../layouts/Layout.astro"
---

<Layout title="carrito">
  

  <div id="cart-container" class="p-10">
    <h1 class="text-3xl text-center mb-6">Tu Carrito de Compras</h1>
    <div id="cart-items" class="flex flex-wrap gap-4 justify-center">
      <!-- Aquí se agregarán los productos con JavaScript -->
    </div>
    <div class="text-center mt-6">
      <button id="checkout-button" class="px-4 py-2 bg-[#FC9090] text-white rounded">Proceder al Pago</button>
    </div>
  </div>
  <script>
    // Cargar productos del almacenamiento local
    document.addEventListener('DOMContentLoaded', () => {
      const cartItems = JSON.parse(localStorage.getItem('cart')) || [];
      const cartContainer = document.getElementById('cart-items');

      cartItems.forEach(item => {
        const itemElement = document.createElement('div');
        itemElement.className = 'w-80 h-112 bg-gray-100 p-5';
        itemElement.innerHTML = `
          <h2 class="text-xl font-bold">${item.nombre}</h2>
          <p>${item.descripcion}</p>
          <p><strong>Precio:</strong> ${item.precio}</p>
          <p><strong>Talla:</strong> ${item.talla}</p>
        `;
        cartContainer.appendChild(itemElement);
      });

      // Limpiar el almacenamiento local después de mostrar los productos (opcional)
      localStorage.removeItem('cart');
    });
  </script>
</Layout>
